{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 10,
      "patch": 0
    },
    "configurePresets": [
      {
        "name": "macOSCoverage",
        "displayName": "macOS Code Coverage",
        "description": "Configuration for macOS with code coverage enabled",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_CXX_FLAGS": "--coverage -g -O0",
          "CMAKE_C_FLAGS": "--coverage -g -O0",
          "CMAKE_EXE_LINKER_FLAGS": "--coverage"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "macOSCoverage",
        "configurePreset": "macOSCoverage"
      }
    ]
}
  